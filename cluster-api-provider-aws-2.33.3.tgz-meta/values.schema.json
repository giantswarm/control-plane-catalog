{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "tag": {
            "type": "string"
        },
        "infrastructure": {
            "type": "object",
            "properties": {
                "image": {
                    "type": "object",
                    "properties": {
                        "domain":{
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "ciliumNetworkPolicy": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            },
            "default": false
        },
        "crdConvertOnly":{
            "type": "boolean"
        },
        "crdInstall": {
            "type": "object",
            "properties": {
                "enable": {
                    "type": "boolean"
                },
                "kubectl": {
                    "type": "object",
                    "properties": {
                        "image": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "capaFeatureGates": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "machinePoolMachines": {
                    "type": "boolean"
                },
                "machinePoolMachinesOnlyForClusterNameRegex": {
                    "type": "string"
                }
            }
        },
        "aws": {
            "type": "object",
            "properties": {
                "arn": {
                    "type": "string"
                }
            }
        },
        "project": {
            "type": "object",
            "properties": {
                "branch": {
                    "type": "string"
                },
                "commit": {
                    "type": "string"
                }
            }
        },
        "watchFilter": {
            "type": "string"
        },
        "serviceType": {
            "type": "string"
        },
        "provider": {
            "type": "object",
            "properties": {
                "region": {
                    "type": "string"
                },
                "capi": {
                    "type": "object",
                    "properties": {
                        "accessKeyID": {
                            "type": "string"
                        },
                        "secretAccessKey": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "registry": {
            "type": "object",
            "properties": {
                "domain": {
                    "type": "string"
                }
            }
        },
        "serviceMonitor": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            },
            "default": true
        },
        "verticalPodAutoscaler": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            }
        },
        "global": {
            "type": "object",
            "properties": {
                "podSecurityStandards": {
                    "type": "object",
                    "properties": {
                        "enforced": {
                            "type": "boolean"
                        }
                    }
                }
            }
        }
    }
}
